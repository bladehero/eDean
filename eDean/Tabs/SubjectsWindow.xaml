<Window x:Class="eDean.Tabs.SubjectsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:eDean.Tabs"
        mc:Ignorable="d"
        Title="Предметы" Height="250" Width="450" MinWidth="450" MinHeight="250">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <DataGrid Name="dataGrid"/>
        <StackPanel Grid.Row="1" Grid.Column="1" VerticalAlignment="Bottom">
                <Button Content="Удалить" Margin="3,3,3,0" Padding="7,3" Click="DelButton_Click"/>
                <Button Content="Сохранить" Margin="3"  Padding="7,3" Click="SaveButton_Click"/>
            </StackPanel>
        </Grid>
</Window>
