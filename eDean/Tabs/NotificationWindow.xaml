<Window x:Class="eDean.Tabs.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:eDean.Tabs"
        mc:Ignorable="d"
        Height="75" Width="250" WindowStyle="None" MinWidth="250" MaxWidth="250" MinHeight="75" MaxHeight="75" Topmost="True">
    <Grid>
        <Button VerticalAlignment="Top" HorizontalAlignment="Right" Content="❌" Background="Transparent" BorderBrush="Transparent" Click="Close_Click" Margin="4,0"/>
        <StackPanel  VerticalAlignment="Center" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="Новый пользователь: "/>
            <TextBox Name="phoneTb" BorderThickness="0" FontWeight="DemiBold" IsReadOnly="True" GotFocus="Phone_GotFocus" SelectionChanged="Phone_SelectionChanged"/>
        </StackPanel>
        <TextBox Name="nameTb" BorderThickness="0" FontWeight="DemiBold" VerticalAlignment="Bottom" Margin="7" HorizontalAlignment="Center" IsReadOnly="True"/>
    </Grid>
</Window>
